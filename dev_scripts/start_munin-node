#!/bin/bash

FINDBIN=$(cd -- "$(dirname "$0")" && pwd)
. $FINDBIN/common.sh

cd $BASEDIR



if [ -f $DESTDIR/var/run/munin/munin-node.pid ]; then
    echo "Pid file found. Not starting"
else
    env PERL5LIB=$DESTDIR/$PERLSITELIB $DESTDIR/usr/sbin/munin-node
fi
tail -f $DESTDIR/var/log/munin/munin-node.log
