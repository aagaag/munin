#!/bin/bash

FINDBIN=$(cd -- "$(dirname "$0")" && pwd)
. $FINDBIN/common.sh

cd $BASEDIR

if [ $1 ]; then
  rm -rf sandbox
  mkdir sandbox
  make clean
fi

make DESTDIR=$DESTDIR HTMLDIR=$DESTDIR/www
fakeroot make install-main install-common install-node install-man DESTDIR=$DESTDIR HTMLDIR=$DESTDIR/www


if [ $1 ]; then
    fakeroot make install-node-plugins DESTDIR=$DESTDIR HTMLDIR=$DESTDIR/www
    perl -pi -e "s/port 4949/port 4948/; 
                 s/user root/user $USER/; 
                 s/group root/group $USER/;
                 s|^(port .*)|\$1

tls disabled
tls_private_key $BASEDIR/common/t/tls/node_key.pem
tls_certificate $BASEDIR/common/t/tls/node_cert.pem
tls_ca_certificate $BASEDIR/common/t/tls/CA/ca_cert.pem
tls_verify_certificate yes
tls_verify_depth 5
|; " $DESTDIR/etc/opt/munin/munin-node.conf

    perl -pi -e "s/(address 127\.0\.0\.1)/\$1\n    port 4948/;
                 s|(# a simple host tree)|tls disabled
tls_private_key $BASEDIR/common/t/tls/master_key.pem
tls_certificate $BASEDIR/common/t/tls/master_cert.pem
tls_ca_certificate $BASEDIR/common/t/tls/CA/ca_cert.pem
tls_verify_certificate yes
tls_verify_depth 5

\$1|" $DESTDIR/etc/opt/munin/munin.conf

  PERL5LIB=$DESTDIR/$PERLSITELIB $DESTDIR/opt/munin/sbin/munin-node-configure --shell --families=contrib,auto | sh -x
fi
